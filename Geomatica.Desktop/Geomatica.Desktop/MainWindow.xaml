<Window x:Class="Geomatica.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Geomatica.Desktop.ViewModels"
        Title="GEOMÁTICA - Visor de Proyectos" Height="748" Width="1180">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#2F2F2F" Height="44">
            <Button Content="Mapa" Command="{Binding ShowMapaCommand}" Margin="8" Padding="12,6"/>
            <Button Content="Archivos" Command="{Binding ShowArchivosCommand}" Margin="8" Padding="12,6"/>
            <TextBlock Text="{Binding CurrentViewName}" Foreground="White" VerticalAlignment="Center" Margin="16,0,0,0"/>
        </StackPanel>

        <ContentControl Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>