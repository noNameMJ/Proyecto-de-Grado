<UserControl x:Class="Geomatica.Desktop.Views.ArchivosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Geomatica.Desktop.Views"
             xmlns:vm="clr-namespace:Geomatica.Desktop.ViewModels">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:CarpetaNode}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📁" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Nombre}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ArchivoItem}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📄" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Nombre}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Barra de filtros compartida -->
        <views:BarraFiltrosView Grid.Row="1" Grid.Column="0"
                             DataContext="{Binding Filtros}"/>

        <!-- Explorer-like pane: Up button + List -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="4" Grid.Row="0">
                <Button Content="Arriba" Command="{Binding ArribaCommand}" Width="80"/>
                <TextBlock Text="" Width="12"/>
                <TextBlock Text="Ruta:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="8,0,4,0"/>
                <TextBlock Text="{Binding RutaActual}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <ListView Grid.Row="1" ItemsSource="{Binding Items}" MouseDoubleClick="ListView_MouseDoubleClick" SelectedItem="{Binding Seleccionado, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Barra inferior -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="8">
            <Button Content="Abrir" Command="{Binding AbrirCommand}"/>
            <Button Content="Eliminar" Margin="8,0,0,0" Command="{Binding EliminarCommand}"/>
            <TextBlock Text="{Binding Estado}" Margin="12,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
