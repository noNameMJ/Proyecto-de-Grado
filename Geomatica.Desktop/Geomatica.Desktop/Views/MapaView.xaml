<UserControl x:Class="Geomatica.Desktop.Views.MapaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:vm="clr-namespace:Geomatica.Desktop.ViewModels"
             xmlns:views="clr-namespace:Geomatica.Desktop.Views">
    <UserControl.Resources>
        <vm:FiltrosViewModel x:Key="FiltrosVM"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Barra de filtros extraída -->
        <views:BarraFiltrosView Grid.Column="0" DataContext="{StaticResource FiltrosVM}"/>

        <!-- Mapa enlazado a tu VM (DataContext) -->
        <Grid Grid.Column="1">
            <esri:MapView x:Name="controlMapView" Map="{Binding Map}" />

            <!-- Botón Home (esquina inferior derecha) ligado al comando en el VM -->
            <Button x:Name="HomeButton"
                    Width="44" Height="44"
                    FontSize="18"
                    Content="🏠"
                    ToolTip="Restaurar vista inicial"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="12"
                    Command="{Binding HomeCommand}"
                    Background="White"
                    Opacity="0.9"
                    />
        </Grid>
    </Grid>
</UserControl>
