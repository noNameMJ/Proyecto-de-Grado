<Window x:Class="Geomatica.Desktop.Views.MapaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        Title="GEOMÁTICA - Mapa" Height="720" Width="1180">
    <Grid>
        <esri:MapView x:Name="MapViewControl">
            <esri:Map>
                <esri:Basemap>
                    <!-- Si usas ApiKey y estilos modernos -->
                    <esri:BasemapStyle BasemapStyle="ArcGISLightGray" />
                </esri:Basemap>
            </esri:Map>
        </esri:MapView>
    </Grid>
</Window>